<Window x:Class="GameManager.GameMediumView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameManager"
        xmlns:vms="clr-namespace:GameManager"
        mc:Ignorable="d"
        Title="PairGame" Height="650" Width="570" Background="#FFB3B3C7">
    <Window.DataContext>
        <vms:PairGameMediumVM/>
    </Window.DataContext>

    <Viewbox VerticalAlignment="Top">
        <DockPanel Height="886" Width="806" LastChildFill="False">
            <Menu DockPanel.Dock="Top" FontSize="30" Height="40">
                <MenuItem Name="MenuFile" Header="File" FontSize="28">
                    <MenuItem Name="NewGame" Header="New Game" FontSize="25" Click="NewGame_Click"/>
                    <Separator/>
                    <MenuItem Name="Exit" Header="Exit" FontSize="25" Click="Exit_Click"/>
                </MenuItem>

                <MenuItem Name ="MenuOptions" Header="Options" FontSize="28">
                    <MenuItem Name="TimeMenu" Header="Time" FontSize="25" Click="Time_Click"/>
                </MenuItem>
            </Menu>

            <Grid x:Name="gameGrid" HorizontalAlignment="Center" VerticalAlignment="Stretch" Width="805" Height="847">

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- First Row-->

                <Image 
                    Name="Card0"
                    Grid.Row="0" Grid.Column="0"
                    Source="{Binding Cards[0].CurrentImageCard, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="3,3,3,3"
                    Visibility="Hidden" MouseDown="Card_MouseDown"
                 />

                <Image
                    Name="Card1"
                    Grid.Row="0" Grid.Column="1"
